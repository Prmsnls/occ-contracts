{
    "extends": "solhint:recommended",
    "plugins": [
        "prettier"
    ],
    "rules": {
        "compiler-version": "0.8.17",
        "func-visibility": [
            "warn",
            {
                "ignoreConstructors": true
            }
        ],
        "prettier/prettier": "error",
        "not-rely-on-time": "off",
        "reason-string": "off",
        "no-empty-blocks": "off",
        "avoid-low-level-calls": "off"
    }
}